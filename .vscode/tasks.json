{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint (Fix)",
      "type": "shell",
      "command": "bun run lint:fix",
      "problemMatcher": []
    },
    {
      "label": "Lint (Fix, Unsafe)",
      "type": "shell",
      "command": "bun run lint:fix --unsafe",
      "problemMatcher": []
    },
    {
      "label": "Dev",
      "type": "shell",
      "command": "bun run dev",
      "problemMatcher": []
    },
    {
      "label": "Typecheck",
      "type": "shell",
      "command": "bun run typecheck",
      "problemMatcher": []
    },
    {
      "label": "Service: Test",
      "type": "shell",
      "command": "bun run test",
      "options": {
        "cwd": "${workspaceFolder}/packages/service"
      },
      "problemMatcher": []
    }
  ]
}
